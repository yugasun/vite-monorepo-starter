{
    "name": "vms",
    "version": "0.0.0",
    "description": "Vite + Lerna monorepo project template",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prestart": "lerna run build",
        "start": "vite",
        "prebuildexample": "lerna run build",
        "buildexample": "vite build",
        "dev": "lerna run dev",
        "build": "lerna run build",
        "clean": "lerna clean",
        "build:core": "pnpm run build --scope @vms/core",
        "build:vue": "pnpm run build --scope @vms/vue",
        "prebuild-all": "lerna run build",
        "build-all": "vite build",
        "test": "vitest",
        "test-only": "vitest --run",
        "type-check": "vue-tsc --noEmit -p tsconfig.example.json --composite false",
        "lint": "eslint --fix --ext .ts,.tsx,.vue --ignore-path .gitignore .",
        "format": "prettier --write --ignore-path .gitignore .",
        "commit": "git-cz",
        "release": "lerna version --conventional-commits --create-release github --yes",
        "postrelease": "git push --follow-tags origin main",
        "prepare": "husky install"
    },
    "keywords": [
        "vite",
        "monorepo",
        "starter",
        "template",
        "typescript",
        "vue",
        "vue3",
        "vitest",
        "pnpm",
        "lerna",
        "nx"
    ],
    "author": "yugasun",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@rushstack/eslint-patch": "^1.3.3",
        "@types/debug": "^4.1.8",
        "@types/jsdom": "^21.1.0",
        "@types/node": "^18.14.2",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vitejs/plugin-vue-jsx": "^3.0.2",
        "@vms/core": "workspace:*",
        "@vms/vue": "workspace:*",
        "@vue/eslint-config-prettier": "^8.0.0",
        "@vue/eslint-config-typescript": "^11.0.3",
        "@vue/test-utils": "^2.4.1",
        "@vue/tsconfig": "^0.1.3",
        "@vueuse/core": "^10.4.1",
        "ant-design-vue": "^4.0.1",
        "debug": "^4.3.4",
        "eslint": "^8.48.0",
        "eslint-plugin-vue": "^9.17.0",
        "happy-dom": "^10.11.1",
        "husky": "^8.0.3",
        "jsdom": "^21.1.0",
        "lerna": "^7.1.5",
        "less": "^4.2.0",
        "npm-run-all": "^4.1.5",
        "only-allow": "^1.1.1",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "tsx": "^3.12.7",
        "type-check": "^0.4.0",
        "typescript": "~4.8.4",
        "vite": "^4.4.9",
        "vite-plugin-dts": "^3.5.2",
        "vite-tsconfig-paths": "^4.0.5",
        "vitest": "^0.34.3",
        "vue": "^3.2.47",
        "vue-tsc": "^1.2.0"
    },
    "workspaces": [
        "packages/*"
    ]
}
